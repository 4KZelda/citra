<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.citraemu.citraemu">

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.gamepad"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-feature android:glEsVersion="0x00030000" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CitraApplication"
        android:allowBackup="true"
        android:banner="@drawable/banner_tv"
        android:icon="@mipmap/ic_launcher"
        android:isGame="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true">

        <activity
            android:name=".ui.main.MainActivity"
            android:theme="@style/CitraBase">

            <!-- This intentfilter marks this Activity as the one that gets launched from Home screen. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.TvMainActivity"
            android:theme="@style/CitraTvBase">

            <!-- This intentfilter marks this Activity as the one that gets launched from Home screen. -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.AddDirectoryActivity"
            android:label="@string/add_directory_title"
            android:theme="@style/CitraBase" />

        <activity
            android:name=".ui.settings.SettingsActivity"
            android:exported="false"
            android:label="@string/preferences_settings"
            android:theme="@style/CitraSettingsBase">
            <intent-filter>
                <action android:name="android.intent.action.APPLICATION_PREFERENCES" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.EmulationActivity"
            android:theme="@style/CitraEmulationBase" />

        <provider
            android:name=".model.GameProvider"
            android:authorities="${applicationId}.provider"
            android:enabled="true"
            android:exported="false"></provider>

    </application>

</manifest>

